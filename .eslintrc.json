{
  "env": {
    "browser": true,
    "es2022": true,
    "webextensions": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn",
    "no-empty": "warn",
    "no-useless-escape": "warn"
  },
  "globals": {
    "chrome": "readonly"
  },
  "ignorePatterns": ["extension/dist/**", "node_modules/**"],
  "overrides": [
    {
      "files": ["tests/**/*.js", "**/*.test.js"],
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "test": "readonly",
        "expect": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly",
        "vi": "readonly",
        "global": "readonly"
      }
    }
  ]
}
